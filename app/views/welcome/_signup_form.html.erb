<%= form_tag("/signup", method: "post") do %>

  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag(:name) %>

  <%= label_tag(:email, "Email:") %>
  <%= text_field_tag(:email) %>


  <%= label_tag(:password, "Password:") %>
  <%= password_field_tag(:password) %>

  <%= submit_tag("Create Account") %>
<% end %>